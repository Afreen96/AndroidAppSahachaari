<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mixed_veg_soup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/vsoup2"
    tools:context="com.example.aasia.sahachaari.mixed_veg_soup">

    <LinearLayout
        android:id="@+id/buttons5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO"
            android:id="@+id/videoButton6" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/fontArtCategories"
        android:layout_width="match_parent"
        android:layout_height="494dp"
        android:layout_above="@+id/buttons5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#8555"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30dp" >

            <TextView
                android:id="@+id/vegSoup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="10dp"
                android:textColor="#FDFDFD"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:text="Mixed Veg Soup" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FDFDFD"
                android:textSize="20dp"
                android:layout_gravity="left"
                android:id="@+id/vegSoupIng" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vegSoupRecipe"
                android:textColor="#FDFDFD"
                android:textSize="20dp"
                android:layout_gravity="left"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
